{
  "rules": {
    "no-tabs": 1,
    "indent": [2, 2],
    "no-console": 0,
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "no-unused-vars": ["error", { "args": "none" }]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended"
}
